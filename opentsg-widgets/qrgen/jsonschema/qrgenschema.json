{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Test Card Schema",
    "description": "The Schmea for the add qr code section of the test card generator",
    "type": "object",
    "properties": {
        "grid": {
            "$ref": "#/$defs/gridschema"
        },
        "code": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "description": "A string that is translated to a qr code, where longer strings generate a larger qr code"
        },
        "colorSpace": {
            "type": "object"
        },
        "type": {
            "type": "string",
            "enum": [
                "builtin.qrcode"
            ],
            "description": "This to be labelled as \"builtin.qrcode\", so that the json is correclty configured"
        },
        "offset": {
            "type": "object",
            "properties": {
                "x": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/percent1"
                        },
                        {
                            "$ref": "#/$defs/percent2"
                        },
                        {
                            "$ref": "#/$defs/pixel"
                        }
                    ]
                },
                "y": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/percent1"
                        },
                        {
                            "$ref": "#/$defs/percent2"
                        },
                        {
                            "$ref": "#/$defs/pixel"
                        }
                    ]
                }
            },
            "additionalProperties": false,
            "description": "The offset of the image placement in the x and y direction"
        },
        "size": {
            "type": "object",
            "properties": {
                "width": {
                    "$ref": "#/$defs/locations"
                },
                "height": {
                    "$ref": "#/$defs/locations"
                }
            },
            "required": [
                "width",
                "height"
            ],
            "additionalProperties": false,
            "description": "The width and height of the qr code to be scaled to"
        },
        "objectQuery": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "targetAlias": {
                        "type": "string",
                        "pattern": "^[\\w\\W]{1,255}$",
                        "description": "the unquie identifier of a factory object"
                    },
                    "keys": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string",
                            "pattern": "^[\\w\\W]{1,255}$"
                        }
                    }
                },
                "required": [
                    "targetAlias",
                    "keys"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "code",
        "type"
    ],
    "additionalProperties": false,
    "$defs": {
        "locations": {
			"type": "number",
            "minimum": 0,
            "maximum": 100
		},
        "pixel": {
            "type": "string",
            "desciption": "pattern requires a pi then star with a number, which can be divided by a resulting number",
            "pattern": "^-{0,1}\\d{1,}px$",
            "description": "pixel value to move the image"
        },
        "percent1": {
            "type": "string",
            "desciption": "pattern requires a pi then star with a number, which can be divided by a resulting number",
            "pattern": "^-{0,1}\\d{0,2}\\.{1}\\d{0,}%$|^-{0,1}\\d{0,2}%$|^-{0,1}(100)%$",
            "description": "percentage value to move the image, e.g. 25%"
        },
        "percent2": {
            "type": "number",
            "minimum": -100,
            "maximum": 100,
            "description": "The percentage of the image for it to be shifted"
        },
        "dimensions": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
        },
        "gridschema": {
            "properties": {
                "location": {
                    "anyOf": [
                        {
                            "type": "string",
                            "pattern": "^[a-pA-P]{1}[0-8]{1}$"
                        },
                        {
                            "type": "string",
                            "pattern": "^[\\w\\W]{1,30}$"
                        }
                    ],
                    "description": "The location of the module to be added to the test card"
                },
                "alias": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 30,
                    "description": "The name to refer to the chosen grid location for the module, these are reset for each section in the array and are optional"
                }
            },
            "required": [
                "location"
            ],
            "additionalProperties": false
        }
    }
}